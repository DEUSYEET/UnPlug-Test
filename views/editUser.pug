extends layout

block content
    div(id="Container")
        div(id="editWrapper")
            form(id="editForm" method="POST" action="/edit")
                label(for="username") Username:&nbsp;
                br
                input(type="text" name="username" value=user.Username required)
                br
                label(for="firstName") First Name:&nbsp;
                br
                input(type="text" name="firstName" value=user.Name.First required) 
                br
                label(for="lastName") Last Name:&nbsp;
                br
                input(type="text" name="lastName" value=user.Name.Last required)
                br
                label(for="password") Password:&nbsp;
                br
                input(type="password" name="password" value="")
                br
                label(for="email") Email:&nbsp;
                br
                input(type="email" name="email" value=user.Email required)
                br
                label(for="location") Zip Code:&nbsp;
                br
                input(type="text" name="location" pattern="^[0-9]{5}$" min="501" max="99950" value=user.UserLocation required)
                br
                br
                input(type="submit" value="Save" class="editBtn")

